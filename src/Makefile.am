AM_LDFLAGS = -L/usr/lib $(OPENSSL_LDFLAGS)
INCLUDES = -I$(top_srcdir)/src 
SUBDIRS =  socket util http spdy sslpp ssi extensions log4cxx main edio


# the library search path.
openlitespeed_LDFLAGS = $(all_libraries)
